<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.demo.feiyueve.alarmclockdemo">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <receiver android:name="com.demo.feiyueve.alarmclockdemo.AlarmReceiver" android:process=":remote"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddAlarmActivity" />
        <activity android:name=".StopwatchActivity" />
        <activity android:name=".AlarmclockActivity" >
            <intent-filter>
                <action android:name="android.intent.action.alarm" />
            </intent-filter>
        </activity>
        <activity android:name=".Addweather"></activity>
    </application>

</manifest>