<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.demo.feiyueve.alarmclockdemo.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight = "1"
        android:layout_marginStart="1dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/listView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="1dp" />

    <ListView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignBottom="@id/timePicker"
        android:layout_weight="1"
        android:id="@+id/listView"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timePicker"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/bt_stopWatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_stopWatch"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/timePicker"
        app:layout_constraintTop_toTopOf="@+id/timePicker" />

    <Button
        android:id="@+id/bt_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_weather"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/timePicker"
        app:layout_constraintTop_toTopOf="@+id/timePicker" />

    <Button
        android:id="@+id/bt_addAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_addAlarm"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/timePicker"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/timePicker" />

    <Button
        android:id="@+id/bt_delAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_delAlarm"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/timePicker"
        app:layout_constraintRight_toRightOf="@+id/timePicker" />
</android.support.constraint.ConstraintLayout>
